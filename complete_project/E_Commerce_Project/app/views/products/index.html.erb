<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

<p class="text-success"><%= notice %></p>

<marquee direction="right">
  <h1 class="text-danger">Products</h1>
</marquee>

<% content_for :title, "Products" %>

<div class="container mt-4">
  <div class="row g-4">
    <%# here we can use out_of_stock scope %>
    <%# @products = @products.out_of_stock %>   
    <% @products.each do |product| %>
      <div class="col-md-4 col-sm-6">
        <div class="card shadow h-100">

          <div class="card-body">
            <h5 class="card-title">
              <%= product.name %>
            </h5>

            <p class="card-text text-muted">
              <%= product.description %>
            </p>

            <p class="mb-1">
              <strong>Price:</strong> â‚¹<%= product.price %>
            </p>

            <p class="mb-1">
              <strong>Stock:</strong> <%= product.stock %>
            </p>

            <p>
              <strong>Status:</strong>
              <span class="badge <%= product.is_active ? 'bg-success' : 'bg-danger' %>">
                <%= product.is_active ? "Active" : "Inactive" %>
              </span>
            </p>
          </div>

          <div class="card-footer bg-transparent border-top-0">
            <%= link_to "View Product", product, class: "btn btn-primary w-100" %>
          </div>

        </div>
      </div>
    <% end %>

  </div>

  <div class="text-center mt-4">
    <%= link_to "New Product", new_product_path, class: "btn btn-success px-4" %>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
