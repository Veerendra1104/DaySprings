<p class="notice"><%= notice %></p>

<div class="customer-card">
  <%= render @customer %>

  <p> <%=  @customer.about_me %> </p>


  <p>

    
<% if @customer.profile_photo.attached? %>
  <%= image_tag @customer.profile_photo, alt: "Profile Picture", size:"400x300"  %>
<% end %>
</p>

  <div class="card-actions">
    <%= link_to "Edit", edit_customer_path(@customer), class: "btn edit-btn" %>
    <%= link_to "Back", customers_path, class: "btn back-btn" %>
    <%= button_to "Destroy", @customer, method: :delete, class: "btn delete-btn" %>
  </div>
</div>
